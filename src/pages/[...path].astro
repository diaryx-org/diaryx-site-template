---
import DiaryxLayout from "../layouts/DiaryxLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const diaryx = await getCollection("diaryx");

  // Content Layer API: entry.id no longer includes file extension
  return diaryx.map((entry) => ({
    params: { path: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;

if (!entry) {
  return Astro.redirect("/404");
}

const { Content, headings } = await render(entry);
const frontmatter = entry.data;

// Check if first heading matches title (to avoid duplication)
const trimFirstHeading =
  Array.isArray(headings) &&
  headings.length > 0 &&
  headings[0]?.depth === 1 &&
  headings[0]?.text.trim() === (frontmatter.title ?? "").trim();
---

<DiaryxLayout frontmatter={frontmatter} trimFirstHeading={trimFirstHeading}>
  <Content />
</DiaryxLayout>
